{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "strict": true,
    "lib": ["ES2017", "DOM", "ES2019"],
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", "test/**/*"]
}
