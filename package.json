{
  "name": "yummy-cubes",
  "version": "1.0.0",
  "description": "Delicious Cubes.",
  "main": "out/index.js",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/uuid": "^7.0.2",
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "test-once": "yarn jest",
    "test": "yarn test-once --watch",
    "dev": "yarn compile && concurrently -k -p \"[{name}]\" -n \"Compiling,Game Server,Client\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn compile:watch\" \"yarn server:watch\" \"yarn client:watch\"",
    "compile": "tsc -p tsconfig.base.json",
    "compile:watch": "yarn compile --watch",
    "server:watch": "nodemon out/src/server/index.js",
    "server": "node out/src/server/index.js",
    "client:watch": "next",
    "clean": "rm -rf out",
    "build": "yarn compile && next build",
    "start": "concurrently -k -p \"[{name}]\" -n \"Game Server,Client\" -c \"cyan.bold,green.bold\" \"yarn server\" \"yarn next start\""
  },
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest": "^25.3.0",
    "next": "^9.3.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "use-socketio": "^2.0.1",
    "uuid": "^7.0.3"
  }
}
