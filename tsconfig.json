{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",

    "target": "es6",
    "lib": ["ES2017", "DOM", "ES2019"],
    "noImplicitAny": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "out",
    "paths": {
      "*": ["node_modules/*", "app/types/*"]
    }
  },
  "include": ["app/**/*", "test/**/*"]
}
